<div class="list_wrap">
  <table class="list">
    <caption>Reimbursements List</caption>
      <tr>
        <th>Date</th>
        <th>Payer</th>
        <th>Money</th>
        <th>Description</th>  
      </tr>

    <% @pays.each do |pay| %>
      <tr>
        <td><%= pay.date %></td>
        <td><%= pay.payer %></td>
        <td><%= pay.money %></td>
        <td><%= pay.description %></td>
        <!-- <td><%= pay.status %></td> -->
        

        <% if pay.status=='false' %>     
          <td><a href="##"><%= link_to "Paid",pay_path(pay),:method => :PATCH %></a></td>
          <td class="del"><a href="##"><%= link_to "Delete",pay_path(pay),:method => :delete %></a></td>
        <% else %>
         
          <td><%= image_tag("confirm.png",class: "confirm") %></td>
        <% end %>
        
      </tr>
    <%end%>
    <span class="page"><%= paginate @pays %></span>         <!-- 頁數按鈕 --> 
  </table>
</div>
  
<button class="back"><a href="##"><%= link_to "Back to Home", root_path %></a></button>