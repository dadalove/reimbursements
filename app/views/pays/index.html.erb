<div class="list_wrap">
  <table class="list">
    <caption>Reimbursements List</caption>
    <% @pays.each do |pay| %>
      <tr>
        <th>Date</th>
        <th>Payer</th>
        <th>Money</th>
        <th>Description</th>  
      </tr>

      <tr>
        <td><%= pay.date %></td>
        <td><%= pay.payer %></td>
        <td><%= pay.money %></td>
        <td><%= pay.description %></td>
        <td class="del"><a href="##"><%= link_to "Delete",pay_path(pay),:method => :delete %></a></td>
      </tr>
    <%end%> 
  </table>
</div>
  
<button class="back"><%= link_to "Back to Home", root_path %></button>